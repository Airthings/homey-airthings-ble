{
  "id": "com.airthings.waveplus",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Airthings Wave Plus"
  },
  "description": {
    "en": "BLE device which fetch VOC, radon, temperature and humidity."
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Vegard B",
    "email": "anaxyd@gmail.com"
  },
  "capabilities": {
    "measure_radon": {
      "type": "number",
      "title": {
        "en": "Radon"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "units": {
        "en": "bq"
      },
      "min": 0,
      "max": 2000,
      "step": 1
    },
    "measure_voc": {
      "type": "number",
      "title": {
        "en": "VOC"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "units": {
        "en": "ppb"
      },
      "min": 0,
      "max": 2000,
      "step": 1
    }
  },
  "drivers": [
    {
      "id": "airthings-wave-plus",
      "name": {
        "en": "Airthings Wave Plus"
      },
      "class": "sensor",
      "capabilities": [
        "measure_radon",
        "measure_voc",
        "measure_humidity",
        "measure_pressure",
        "measure_temperature",
        "measure_co2"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/airthings-wave-plus/assets/images/large.png",
        "small": "/drivers/airthings-wave-plus/assets/images/small.png"
      }
    }
  ]
}